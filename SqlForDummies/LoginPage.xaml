<Page x:Class="SqlForDummies.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SqlForDummies"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <StackPanel Background="White">
        <Label HorizontalAlignment="Center" FontSize="25">לחלשים - קופה SQL</Label>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="20">
            <Label HorizontalAlignment="Center" 
                   Margin="10">Password</Label>
            <PasswordBox HorizontalAlignment="Center" 
                         Width="200" 
                         Height="20"
                         Name="entryPassword"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Height="30" Width="130" Click="Button_Click">OK</Button>
        </StackPanel>
        </WrapPanel>
    </StackPanel>
</Page>
