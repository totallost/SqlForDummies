<Page x:Class="SqlForDummies.SelectResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SqlForDummies"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectResultPage">
    <StackPanel>
        <DataGrid x:Name="SelectDataGrid" ItemsSource="{Binding}" MaxHeight="350"/>
        <Button Content="חזור" Click="Button_Click" Width="100" Height="30" Margin="20"/>
        <Label Content="לא נמצאו נתונים" Visibility="Hidden" x:Name="EmptySelectLabel" HorizontalAlignment="Center" FontSize="25"/>
    </StackPanel>
</Page>
